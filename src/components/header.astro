<style>
  /* Header transparency with backdrop blur */
  .header-transparent {
    background-color: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  :global(.dark) .header-transparent {
    background-color: rgba(17, 24, 39, 0.8);
  }

  /* Logo image glow in dark mode */
  .logo img {
    transition: filter 0.3s ease, transform 0.3s ease;
    margin: 0 1rem;
  }

  .logo img:hover {
    transform: scale(1.3);
  }

  :global(.dark) .logo img {
    filter: drop-shadow(0 0 12px rgba(255, 255, 255, 0.7)) drop-shadow(0 0 6px rgba(255, 255, 255, 0.9)) drop-shadow(0 0 3px rgba(255, 255, 255, 1));
  }

  /* Custom tooltip for logo */
  .logo-link-container {
    position: relative;
  }

  .logo-link-container::after {
    content: attr(data-tooltip);
    position: absolute;
    bottom: -2.5rem;
    left: 50%;
    transform: translateX(-50%) translateY(-5px);
    padding: 0.5rem 0.75rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: 6px;
    white-space: nowrap;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s, transform 0.2s, visibility 0.2s;
    pointer-events: none;
    z-index: 1000;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .logo-link-container::before {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 50%;
    transform: translateX(-50%);
    border: 6px solid transparent;
    border-bottom-color: #667eea;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s, visibility 0.2s;
    pointer-events: none;
    z-index: 1000;
  }

  .logo-link-container:hover::after,
  .logo-link-container:hover::before {
    opacity: 1;
    visibility: visible;
  }

  .logo-link-container:hover::after {
    transform: translateX(-50%) translateY(0);
  }

  :global(.dark) .logo-link-container:hover::after {
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  /* Nav links styling */
  .nav-item {
    position: relative;
  }

  .nav-link {
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s, transform 0.3s ease, filter 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .dropdown-arrow {
    font-size: 0.875rem;
    margin-left: 0.125rem;
  }

  .nav-link.active {
    color: #667eea;
    font-weight: 700;
    position: relative;
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 2px;
  }

  .nav-link:hover {
    color: #667eea;
    transform: scale(1.1);
    filter: drop-shadow(0 0 8px rgba(102, 126, 234, 0.8)) drop-shadow(0 0 4px rgba(102, 126, 234, 1));
  }

  /* Dropdown menu styling */
  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    margin-top: 0.5rem;
    background: var(--header-bg);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    min-width: 180px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: opacity 0.2s, transform 0.2s, visibility 0.2s;
    z-index: 200;
  }

  .nav-item:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-item {
    display: block;
    padding: 0.75rem 1rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: 500;
    transition: background-color 0.2s, color 0.2s;
  }

  .dropdown-item:hover {
    background-color: var(--hover-bg);
    color: #667eea;
  }

  .dropdown-item.active {
    color: #667eea;
    background-color: var(--hover-bg);
  }

  .dropdown-item:first-child {
    border-radius: 8px 8px 0 0;
  }

  .dropdown-item:last-child {
    border-radius: 0 0 8px 8px;
  }

  /* Theme toggle button */
  #theme-toggle {
    color: var(--text-secondary);
  }

  #theme-toggle:hover {
    color: #667eea;
    background-color: var(--hover-bg);
    transform: scale(1.2);
  }

  :global(.dark) #theme-toggle:hover {
    filter: drop-shadow(0 0 6px rgba(102, 126, 234, 0.5));
  }

  /* Mobile-specific styles */
  @media (max-width: 768px) {
    /* On mobile, show dropdown only when active class is present */
    .dropdown-menu {
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
    }

    .nav-item.mobile-active .dropdown-menu {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }

    /* Disable hover effect on mobile */
    .nav-item:hover .dropdown-menu {
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
    }

    .nav-item.mobile-active:hover .dropdown-menu {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }
  }

  /* Desktop hover behavior */
  @media (min-width: 769px) {
    .nav-item:hover .dropdown-menu {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }
  }
</style>

<script>
  // Mobile navigation toggle functionality
  document.addEventListener('DOMContentLoaded', () => {
    const navItems = document.querySelectorAll('.nav-item.has-dropdown');
    const isMobile = () => window.innerWidth <= 768;

    navItems.forEach(navItem => {
      const navLink = navItem.querySelector('.nav-link');
      
      if (navLink) {
        navLink.addEventListener('click', (e) => {
          // Only handle click on mobile devices
          if (isMobile()) {
            e.preventDefault();
            e.stopPropagation();

            // Close all other open dropdowns
            navItems.forEach(item => {
              if (item !== navItem) {
                item.classList.remove('mobile-active');
              }
            });

            // Toggle current dropdown
            navItem.classList.toggle('mobile-active');
          }
        });
      }
    });

    // Close dropdowns when clicking outside on mobile
    document.addEventListener('click', (e) => {
      if (isMobile()) {
        const clickedInsideNav = Array.from(navItems).some(item => 
          item.contains(e.target as Node)
        );
        
        if (!clickedInsideNav) {
          navItems.forEach(item => {
            item.classList.remove('mobile-active');
          });
        }
      }
    });

    // Handle window resize to clean up mobile state when switching to desktop
    let resizeTimer: number;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = window.setTimeout(() => {
        if (!isMobile()) {
          // Remove mobile-active class when switching to desktop
          navItems.forEach(item => {
            item.classList.remove('mobile-active');
          });
        }
      }, 250);
    });
  });
</script>
