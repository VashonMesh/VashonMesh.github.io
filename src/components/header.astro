<style>
  /* Header transparency with backdrop blur */
  .header-transparent {
    background-color: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    padding: 1rem 1rem;
  }

  @media (min-width: 1280px) {
    .header-transparent {
      padding: 1.25rem 1rem;
    }
  }

  @media (min-width: 1920px) {
    .header-transparent {
      padding: 1.5rem 1rem;
    }
  }

  :global(.dark) .header-transparent {
    background-color: rgba(17, 24, 39, 0.8);
  }

  /* Logo image glow in dark mode */
  .logo img {
    transition:
      filter 0.3s ease,
      transform 0.3s ease;
    margin: 0 1rem;
    width: 2rem;
    height: 2rem;
  }

  /* Scale up logo on larger screens */
  @media (min-width: 1280px) {
    .logo img {
      width: 2.5rem;
      height: 2.5rem;
    }
  }

  @media (min-width: 1920px) {
    .logo img {
      width: 3rem;
      height: 3rem;
    }
  }

  .logo img:hover {
    transform: scale(1.3);
  }

  :global(.dark) .logo img {
    filter: drop-shadow(0 0 12px rgba(255, 255, 255, 0.7))
      drop-shadow(0 0 6px rgba(255, 255, 255, 0.9))
      drop-shadow(0 0 3px rgba(255, 255, 255, 1));
  }

  /* Custom tooltip for logo */
  .logo-link-container {
    position: relative;
  }

  .logo-link-container::after {
    content: attr(data-tooltip);
    position: absolute;
    bottom: -2.5rem;
    left: 0;
    transform: translateY(-5px);
    padding: 0.5rem 0.75rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: 6px;
    white-space: nowrap;
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.2s,
      transform 0.2s,
      visibility 0.2s;
    pointer-events: none;
    z-index: 1000;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  @media (min-width: 1280px) {
    .logo-link-container::after {
      font-size: 1rem;
      padding: 0.625rem 0.875rem;
    }
  }

  @media (min-width: 1920px) {
    .logo-link-container::after {
      font-size: 1.125rem;
      padding: 0.75rem 1rem;
    }
  }

  .logo-link-container::before {
    content: "";
    position: absolute;
    bottom: -0.5rem;
    left: 1rem;
    border: 6px solid transparent;
    border-bottom-color: #667eea;
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.2s,
      visibility 0.2s;
    pointer-events: none;
    z-index: 1000;
  }

  .logo-link-container:hover::after,
  .logo-link-container:hover::before {
    opacity: 1;
    visibility: visible;
  }

  .logo-link-container:hover::after {
    transform: translateY(0);
  }

  :global(.dark) .logo-link-container:hover::after {
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  /* Hamburger button - hidden on desktop */
  .hamburger-btn {
    display: none;
    flex-direction: column;
    justify-content: space-around;
    width: 28px;
    height: 24px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 300;
    transition: transform 0.3s ease;
  }

  .hamburger-line {
    width: 28px;
    height: 3px;
    background-color: var(--text-secondary);
    border-radius: 2px;
    transition: all 0.3s ease;
    transform-origin: center;
  }

  .hamburger-btn:hover .hamburger-line {
    background-color: #667eea;
  }

  /* Hamburger animation when active */
  .hamburger-btn.active .hamburger-line:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }

  .hamburger-btn.active .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .hamburger-btn.active .hamburger-line:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }

  /* Nav links styling */
  .nav-item {
    position: relative;
  }

  .nav-link {
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    transition:
      color 0.2s,
      transform 0.3s ease,
      filter 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  /* Scale up nav links on larger screens */
  @media (min-width: 1280px) {
    .nav-link {
      font-size: 1.125rem;
    }
  }

  @media (min-width: 1920px) {
    .nav-link {
      font-size: 1.25rem;
    }
  }

  .dropdown-arrow {
    font-size: 0.875rem;
    margin-left: 0.125rem;
  }

  .nav-link.active {
    color: #667eea;
    font-weight: 700;
    position: relative;
  }

  .nav-link.active::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 2px;
  }

  .nav-link:hover {
    color: #667eea;
    transform: scale(1.1);
    filter: drop-shadow(0 0 8px rgba(102, 126, 234, 0.8))
      drop-shadow(0 0 4px rgba(102, 126, 234, 1));
  }

  /* Dropdown menu styling */
  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    margin-top: 0.5rem;
    background: var(--header-bg);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    min-width: 180px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition:
      opacity 0.2s,
      transform 0.2s,
      visibility 0.2s;
    z-index: 200;
  }

  /* Scale up dropdown menu on larger screens */
  @media (min-width: 1280px) {
    .dropdown-menu {
      min-width: 220px;
    }
  }

  @media (min-width: 1920px) {
    .dropdown-menu {
      min-width: 260px;
    }
  }

  .nav-item:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-item {
    display: block;
    padding: 0.75rem 1rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    transition:
      background-color 0.2s,
      color 0.2s;
  }

  /* Scale up dropdown items on larger screens */
  @media (min-width: 1280px) {
    .dropdown-item {
      font-size: 1.0625rem;
      padding: 0.875rem 1.25rem;
    }
  }

  @media (min-width: 1920px) {
    .dropdown-item {
      font-size: 1.125rem;
      padding: 1rem 1.5rem;
    }
  }

  .dropdown-item.parent-link {
    font-weight: 600;
    border-bottom: 1px solid var(--border-color);
  }

  /* Hide parent overview links on desktop - top-level items are directly clickable */
  @media (min-width: 769px) {
    .dropdown-item.parent-link {
      display: none;
    }
  }

  .dropdown-item:hover {
    background-color: var(--hover-bg);
    color: #667eea;
  }

  .dropdown-item.active {
    color: #667eea;
    background-color: var(--hover-bg);
  }

  .dropdown-item:first-child {
    border-radius: 8px 8px 0 0;
  }

  .dropdown-item:last-child {
    border-radius: 0 0 8px 8px;
  }

  /* On desktop, since parent-link is hidden, ensure first visible item has top radius */
  @media (min-width: 769px) {
    .dropdown-item:first-of-type:not(.parent-link) {
      border-radius: 8px 8px 0 0;
    }
  }

  /* Theme toggle button */
  #theme-toggle {
    color: var(--text-secondary);
  }

  #theme-toggle svg {
    width: 20px;
    height: 20px;
  }

  /* Scale up theme toggle on larger screens */
  @media (min-width: 1280px) {
    #theme-toggle svg {
      width: 24px;
      height: 24px;
    }
  }

  @media (min-width: 1920px) {
    #theme-toggle svg {
      width: 28px;
      height: 28px;
    }
  }

  #theme-toggle:hover {
    color: #667eea;
    background-color: var(--hover-bg);
    transform: scale(1.2);
  }

  :global(.dark) #theme-toggle:hover {
    filter: drop-shadow(0 0 6px rgba(102, 126, 234, 0.5));
  }

  /* Mobile-specific styles */
  @media (max-width: 768px) {
    /* Show hamburger button on mobile */
    .hamburger-btn {
      display: flex;
    }

    /* Hide navigation menu by default on mobile */
    .links {
      position: fixed;
      top: 72px;
      right: -100%;
      width: 280px;
      height: calc(100vh - 72px);
      background: var(--header-bg);
      border-left: 1px solid var(--border-color);
      flex-direction: column;
      align-items: flex-start;
      gap: 0;
      padding: 1.5rem;
      overflow-y: auto;
      transition: right 0.3s ease;
      box-shadow: -4px 0 6px rgba(0, 0, 0, 0.1);
    }

    /* Show menu when active */
    .links.mobile-menu-open {
      right: 0;
    }

    /* Adjust nav items for vertical layout */
    .nav-item {
      width: 100%;
      border-bottom: 1px solid var(--border-color);
      padding: 0.75rem 0;
    }

    .nav-item:last-child {
      border-bottom: none;
    }

    /* Adjust dropdown menu for mobile */
    .dropdown-menu {
      position: static;
      margin-top: 0.75rem;
      margin-left: 1rem;
      box-shadow: none;
      border: none;
      border-left: 2px solid #667eea;
      border-radius: 0;
      background: transparent;
    }

    /* On mobile, show dropdown only when active class is present */
    .dropdown-menu {
      opacity: 0;
      visibility: hidden;
      max-height: 0;
      transform: translateY(0);
      overflow: hidden;
      transition:
        opacity 0.3s ease,
        max-height 0.3s ease,
        visibility 0.3s ease;
    }

    .nav-item.mobile-active .dropdown-menu {
      opacity: 1;
      visibility: visible;
      max-height: 500px;
      transform: translateY(0);
    }

    /* Disable hover effect on mobile */
    .nav-item:hover .dropdown-menu {
      opacity: 0;
      visibility: hidden;
      max-height: 0;
    }

    .nav-item.mobile-active:hover .dropdown-menu {
      opacity: 1;
      visibility: visible;
      max-height: 500px;
    }

    /* Adjust dropdown items for mobile */
    .dropdown-item {
      padding: 0.5rem 0.75rem;
      font-size: 0.9rem;
    }

    .dropdown-item.parent-link {
      border-bottom: 1px solid var(--border-color);
      margin-bottom: 0.25rem;
    }

    /* Keep theme toggle visible */
    #theme-toggle {
      position: absolute;
      top: 1rem;
      right: 5rem;
    }
  }

  /* Desktop hover behavior */
  @media (min-width: 769px) {
    .nav-item:hover .dropdown-menu {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }
  }
</style>

<script>
  // Log version for developers
  import pkg from "../../package.json";
  console.log(`VashonMesh.org v${pkg.version}`);

  // Mobile navigation toggle functionality
  document.addEventListener("DOMContentLoaded", () => {
    const hamburgerBtn = document.getElementById("hamburger-toggle");
    const navMenu = document.getElementById("nav-menu");
    const navItems = document.querySelectorAll(".nav-item.has-dropdown");
    const isMobile = () => window.innerWidth <= 768;

    // Hamburger menu toggle
    if (hamburgerBtn && navMenu) {
      hamburgerBtn.addEventListener("click", () => {
        const isOpen = navMenu.classList.toggle("mobile-menu-open");
        hamburgerBtn.classList.toggle("active");
        hamburgerBtn.setAttribute("aria-expanded", isOpen.toString());

        // Prevent body scroll when menu is open
        if (isOpen) {
          document.body.style.overflow = "hidden";
        } else {
          document.body.style.overflow = "";
          // Close all dropdowns when closing menu
          navItems.forEach((item) => {
            item.classList.remove("mobile-active");
          });
        }
      });
    }

    // Dropdown navigation for mobile
    navItems.forEach((navItem) => {
      const navLink = navItem.querySelector(".nav-link");

      if (navLink) {
        navLink.addEventListener("click", (e) => {
          // Only handle click on mobile devices
          if (isMobile()) {
            e.preventDefault();
            e.stopPropagation();

            // Close all other open dropdowns
            navItems.forEach((item) => {
              if (item !== navItem) {
                item.classList.remove("mobile-active");
              }
            });

            // Toggle current dropdown
            navItem.classList.toggle("mobile-active");
          }
        });
      }
    });

    // Close mobile menu when clicking outside
    document.addEventListener("click", (e) => {
      if (isMobile() && navMenu && hamburgerBtn) {
        const isClickInsideNav = navMenu.contains(e.target as Node);
        const isClickOnHamburger = hamburgerBtn.contains(e.target as Node);

        if (
          !isClickInsideNav &&
          !isClickOnHamburger &&
          navMenu.classList.contains("mobile-menu-open")
        ) {
          navMenu.classList.remove("mobile-menu-open");
          hamburgerBtn.classList.remove("active");
          hamburgerBtn.setAttribute("aria-expanded", "false");
          document.body.style.overflow = "";

          // Close all dropdowns
          navItems.forEach((item) => {
            item.classList.remove("mobile-active");
          });
        }
      }
    });

    // Handle window resize
    let resizeTimer: number;
    window.addEventListener("resize", () => {
      clearTimeout(resizeTimer);
      resizeTimer = window.setTimeout(() => {
        if (!isMobile()) {
          // Remove mobile-specific classes when switching to desktop
          if (navMenu) {
            navMenu.classList.remove("mobile-menu-open");
          }
          if (hamburgerBtn) {
            hamburgerBtn.classList.remove("active");
            hamburgerBtn.setAttribute("aria-expanded", "false");
          }
          document.body.style.overflow = "";

          navItems.forEach((item) => {
            item.classList.remove("mobile-active");
          });
        }
      }, 250);
    });
  });
</script>
