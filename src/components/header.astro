<header class="bg-[var(--header-bg)] shadow-sm px-4 py-4 sticky top-0 z-[100]">
  <nav class="max-w-[1200px] mx-auto flex justify-between items-center">
    <div class="flex items-center logo">
      <img src="../../favicon.svg" alt="VashonMesh Logo" class="align-middle w-8 h-8 ml-4 mr-6" />
      <a href="/" class="text-2xl font-extrabold no-underline logo-link">VashonMesh.org</a>
    </div>
    <div class="flex items-center gap-6 links">
      {navItems.map(item => (
        <div class={`nav-item ${item.children ? 'has-dropdown' : ''}`}>
          <a 
            href={item.href} 
            class={`nav-link ${isActive(item.href, currentPath, item.children) ? 'active' : ''}`}
          >
            {item.label}
            {item.children && <span class="dropdown-arrow">â–¾</span>}
          </a>
          {item.children && (
            <div class="dropdown-menu">
              {item.children.map(child => (
                <a 
                  href={child.href}
                  class={`dropdown-item ${isActive(child.href, currentPath) ? 'active' : ''}`}
                >
                  {child.label}
                </a>
              ))}
            </div>
          )}
        </div>
      ))}
      <button id="theme-toggle" class="bg-transparent border-none cursor-pointer p-2 flex items-center justify-center rounded-md transition-all duration-200" aria-label="Toggle dark mode" title="Toggle dark mode">
        <svg class="sun-icon hidden dark:block" width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
