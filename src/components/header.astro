---
import pkg from "../../package.json";

const currentPath = Astro.url.pathname;

interface NavItem {
  href: string;
  label: string;
  children?: NavItem[];
}

const navItems: NavItem[] = [
  {
    href: "/",
    label: "VashonMesh.org",
    children: [
      { href: "/vashon-mesh", label: "About Us" },
      { href: "/vashon-mesh/contact-us", label: "Contact Us" },
      { href: "/vashon-mesh/get-involved", label: "Get Involved" },
    ],
  },
  {
    href: "/mesh-tech",
    label: "Mesh Tech",
    children: [
      { href: "/mesh-tech/radios", label: "Radios" },
      { href: "/mesh-tech/repeaters", label: "Repeaters" },
      { href: "/mesh-tech/room-repeaters", label: "Room Repeaters" },
      { href: "/mesh-tech/antennas", label: "Antennas" },
      { href: "/mesh-tech/mapping", label: "Mapping" },
      { href: "/mesh-tech/software", label: "Software" },
      { href: "/mesh-tech/glossary", label: "Glossary" },
    ],
  },
  {
    href: "/mesh-on-vashon",
    label: "Vashon Network",
    children: [{ href: "/mesh-on-vashon/emcomm", label: "Emergency Comms" }],
  },
  { href: "/news", label: "News" },
];

// Function to check if current path matches nav item or its children
function isActive(
  itemPath: string,
  currentPath: string,
  children?: NavItem[],
): boolean {
  if (itemPath === "/") {
    if (currentPath === "/") return true;
    // Check if any child is active
    return (
      children?.some((child) => currentPath.startsWith(child.href)) ?? false
    );
  }
  if (currentPath.startsWith(itemPath)) return true;
  // Check if any child is active
  return children?.some((child) => currentPath.startsWith(child.href)) ?? false;
}
