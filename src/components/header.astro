---
const currentPath = Astro.url.pathname;

interface NavItem {
  href: string;
  label: string;
  children?: NavItem[];
}

const navItems: NavItem[] = [
  { 
    href: '/', 
    label: 'Home',
    children: [
      { href: '/about', label: 'About Us' },
      { href: '/contact-us', label: 'Contact Us' },
      { href: '/get-involved', label: 'Get Involved' }
    ]
  },
  { 
    href: '/mesh-network', 
    label: 'Mesh Tech',
    children: [
      { href: '/radios', label: 'Devices' },
      { href: '/repeaters', label: 'Repeaters' }
    ]
  },
  { 
    href: '/vashon-network', 
    label: 'Vashon Network',
    children: [
      { href: '/emcomm', label: 'Emergency Comms' }
    ]
  },
  { href: '/news', label: 'News' }
];

// Function to check if current path matches nav item or its children
function isActive(itemPath: string, currentPath: string, children?: NavItem[]): boolean {
  if (itemPath === '/') {
    if (currentPath === '/') return true;
    // Check if any child is active
    return children?.some(child => currentPath.startsWith(child.href)) ?? false;
  }
  if (currentPath.startsWith(itemPath)) return true;
  // Check if any child is active
  return children?.some(child => currentPath.startsWith(child.href)) ?? false;
}
