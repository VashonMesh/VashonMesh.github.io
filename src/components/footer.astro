---
import pkg from "../../package.json";

const year = new Date().getFullYear();
---

<footer
  class="footer-transparent px-4 py-8 mt-16 border-t border-[var(--border-color)]"
>
  <div
    class="max-w-[1200px] mx-auto flex justify-between items-center flex-wrap gap-4"
  >
    <p class="text-[var(--text-secondary)] m-0">
      <span class="copyright-tooltip" data-version={`v${pkg.version}`}>
        &copy; {year} VashonMesh.org, All rights reserved.
      </span>
    </p>
    <p class="m-0">
      <a href="https://vashonsoftware.com" class="com"
        >Site by Vashon Software</a>
    </p>
    <div class="flex items-center social-links">
      <a
        href="https://github.com/VashonMesh/VashonMesh.github.io"
        target="_blank"
        rel="noopener"
        class="inline-flex items-center"
      >
        <img
          src="/logo/GitHub-Mark-32px.png"
          alt=""
          class="w-8 h-8 align-middle mr-2.5"
        />Edit on GitHub
      </a>
      <a
        href="https://W7VMI.org"
        target="_blank"
        rel="noopener"
        class="inline-flex items-center"
      >
        <img
          src="/logo/w7vmi_new_logo.svg"
          alt=""
          class="w-8 h-8 align-middle mr-2.5 ml-10"
        />Affiliated with W7VMI</a
      >
    </div>
  </div>
</footer>

<style>
  /* Copyright tooltip */
  .copyright-tooltip {
    position: relative;
    cursor: help;
  }

  .copyright-tooltip::after {
    content: attr(data-version);
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(-8px);
    background-color: rgba(0, 0, 0, 0.9);
    color: white;
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 0.875rem;
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition:
      opacity 0.3s ease,
      transform 0.3s ease;
    z-index: 1000;
  }

  .copyright-tooltip:hover::after {
    opacity: 1;
    transform: translateX(-50%) translateY(-4px);
  }

  :global(.dark) .copyright-tooltip::after {
    background-color: rgba(255, 255, 255, 0.95);
    color: #111827;
  }

  /* Footer transparency with backdrop blur */
  .footer-transparent {
    background-color: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  :global(.dark) .footer-transparent {
    background-color: rgba(17, 24, 39, 0.8);
  }

  /* Vashon Software link with color swirl animation */
  .com {
    display: inline-block;
    transition: all 0.5s ease;
    color: #667eea;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 400;
  }

  .com:hover {
    transform: scale(1.2) rotate(5deg);
    filter: hue-rotate(180deg) drop-shadow(0 0 8px rgba(102, 126, 234, 0.8));
    animation: colorSwirl 2s infinite;
    font-size: 1.1rem;
    font-weight: 700;
  }

  @keyframes colorSwirl {
    0% {
      filter: hue-rotate(0deg) drop-shadow(0 0 8px rgba(102, 126, 234, 0.8));
    }
    25% {
      filter: hue-rotate(90deg) drop-shadow(0 0 8px rgba(234, 102, 126, 0.8));
    }
    50% {
      filter: hue-rotate(180deg) drop-shadow(0 0 8px rgba(126, 234, 102, 0.8));
    }
    75% {
      filter: hue-rotate(270deg) drop-shadow(0 0 8px rgba(234, 126, 102, 0.8));
    }
    100% {
      filter: hue-rotate(360deg) drop-shadow(0 0 8px rgba(102, 126, 234, 0.8));
    }
  }

  /* Social links styling */
  .social-links a {
    color: var(--text-secondary);
    text-decoration: none;
    transition:
      color 0.2s,
      transform 0.3s ease;
  }

  .social-links a:hover {
    color: #667eea;
    transform: scale(1.1);
  }

  /* Icon glow effect in dark mode */
  :global(.dark) .social-links img {
    filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.4));
    transition:
      transform 0.3s ease,
      filter 0.3s ease;
  }

  :global(.dark) .social-links a:hover img {
    filter: drop-shadow(0 0 20px rgba(255, 255, 255, 1));
    transform: scale(1.5);
  }
</style>
