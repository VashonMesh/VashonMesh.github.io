---
/**
 * SEO Component - Comprehensive meta tags for social media and search engines
 * 
 * @param title - Page title (will be suffixed with site name)
 * @param description - Page description for meta tags
 * @param image - Absolute URL to share image (defaults to site logo)
 * @param imageAlt - Alt text for the share image
 * @param url - Canonical URL (defaults to current page)
 * @param type - Open Graph type (default: 'website')
 * @param noindex - Prevent indexing by search engines
 * @param canonical - Custom canonical URL
 */

interface Props {
  title: string;
  description: string;
  image?: string;
  imageAlt?: string;
  url?: string;
  type?: 'website' | 'article' | 'profile';
  noindex?: boolean;
  canonical?: string;
  author?: string;
  publishedTime?: string;
  modifiedTime?: string;
}

const {
  title,
  description,
  image = 'https://vashonmesh.org/VashonMesh.svg',
  imageAlt = 'VashonMesh Logo',
  url = new URL(Astro.url.pathname, Astro.site).href,
  type = 'website',
  noindex = false,
  canonical,
  author = 'VashonMesh Community',
  publishedTime,
  modifiedTime,
} = Astro.props;

const siteName = 'VashonMesh';
const fullTitle = title.includes(siteName) ? title : `${title} | ${siteName}`;
const canonicalURL = canonical || url;

// Ensure image is absolute URL
const absoluteImage = image.startsWith('http') ? image : `${Astro.site}${image.replace(/^\//, '')}`;
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />
{noindex && <meta name="robots" content="noindex, nofollow" />}
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={url} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={absoluteImage} />
<meta property="og:image:alt" content={imageAlt} />
<meta property="og:site_name" content={siteName} />
<meta property="og:locale" content="en_US" />

{type === 'article' && (
  <>
    {author && <meta property="article:author" content={author} />}
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
  </>
)}

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={url} />
<meta name="twitter:title" content={fullTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={absoluteImage} />
<meta name="twitter:image:alt" content={imageAlt} />

<!-- Additional SEO -->
<meta name="author" content={author} />
<meta name="generator" content={Astro.generator} />

<!-- Structured Data (JSON-LD) -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": type === 'article' ? 'Article' : 'WebPage',
  "headline": title,
  "description": description,
  "image": absoluteImage,
  "url": url,
  "author": {
    "@type": "Organization",
    "name": author
  },
  ...(publishedTime && { "datePublished": publishedTime }),
  ...(modifiedTime && { "dateModified": modifiedTime }),
})} />
