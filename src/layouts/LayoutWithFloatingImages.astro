---
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;

const images = [
  'custom-Meshtastic.png',
  'Heltec-M02.png',
  'LILYGO-T-DISPLAY-P4.png',
  'LILYGO-T-Watch-S3.png',
  'm5-lora.png',
  'Meshtastic-DIY-ESP32.png',
  'Rak.png',
  'sensecap-card-tracker-t1000-e.png',
  'T-DECK-PLUS_7.png',
  'Wisblock_WisMesh_Pocket_V2_RAK.png',
  'Panel-Antenna.png',
  'solar.png'
];

// Shuffle array randomly
const shuffledImages = [...images].sort(() => Math.random() - 0.5);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="VashonMesh - Community mesh networks connecting neighbors" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik+Maps&display=swap" rel="stylesheet">

    <title>{title}</title>
  </head>
  <body>
    <div class="floating-container">
      {shuffledImages.map((img, index) => (
        <div class={`floating-image float-${index + 1}`}>
          <span class="img-wrapper">
            <img src={`/hero-imgs/${img}`} alt={img.replace(/\.(png|jpg|jpeg)$/, '')} style="max-width: 80px; width: 80px; height: auto;" />
          </span>
        </div>
      ))}
    </div>
    <div class="site-wrapper">
      <Header />
      <div class="page-content">
        <slot />
      </div>
      <Footer />
    </div>
  </body>
  <script data-goatcounter="https://vashonmesh.goatcounter.com/count"
        async src="//gc.zgo.at/count.js"></script>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
    
    /* Light mode colors */
    --bg-primary: #ffffff;
    --bg-secondary: #f9fafb;
    --text-primary: #111827;
    --text-secondary: #6b7280;
    --header-bg: #ffffff;
    --footer-bg: #f3f4f6;
    --border-color: #e5e7eb;
    --hover-bg: #f3f4f6;
  }

  .dark {
    /* Dark mode colors */
    --bg-primary: rgba(10, 10, 10, 0.85);
    --bg-secondary: rgba(26, 26, 46, 0.85);
    --text-primary: #f9fafb;
    --text-secondary: #d1d5db;
    --header-bg: rgba(17, 24, 39, 0.95);
    --footer-bg: rgba(31, 41, 55, 0.95);
    --border-color: #374151;
    --hover-bg: #1f2937;
  }

  * {
    box-sizing: border-box;
  }

  html {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu,
      Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    background: #0a0a0a;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  body {
    margin: 0;
    padding: 0;
    background: transparent;
    color: var(--text-primary);
    min-height: 100vh;
    overflow-x: hidden;
    position: relative;
  }

  .site-wrapper {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  header {
    position: relative;
    z-index: 100;
  }

  footer {
    position: relative;
    z-index: 100;
    margin-top: auto;
  }

  .page-content {
    flex: 1;
    position: relative;
    z-index: 3;
    pointer-events: none;
  }

  .page-content > * {
    pointer-events: auto;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  .floating-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #0a0a0a 100%);
    overflow: hidden;
    z-index: 2;
    pointer-events: none;
  }

  .floating-image {
    position: absolute;
    pointer-events: auto;
    cursor: pointer;
    z-index: 1;
  }

  .floating-image:hover {
    z-index: 200 !important;
  }

  .img-wrapper {
    display: inline-block;
    opacity: 0.5;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    transform: scale(1);
  }

  .floating-image:hover .img-wrapper {
    opacity: 1 !important;
    transform: scale(2.5) rotate(5deg) !important;
  }

  .floating-image img {
    display: block;
    max-width: 80px !important;
    width: 80px !important;
    height: auto !important;
    filter: drop-shadow(0 0 25px rgba(100, 200, 255, 0.45)) drop-shadow(0 0 40px rgba(100, 200, 255, 0.2));
    border-radius: 8px;
  }

  /* Individual floating animations */
  .float-1 {
    top: 10%;
    left: 5%;
    animation: float1 25s linear infinite;
  }

  .float-2 {
    top: 60%;
    left: 80%;
    animation: float2 30s linear infinite;
  }

  .float-3 {
    top: 30%;
    left: 70%;
    animation: float3 35s linear infinite;
  }

  .float-4 {
    top: 70%;
    left: 10%;
    animation: float4 28s linear infinite;
  }

  .float-5 {
    top: 80%;
    left: 50%;
    animation: float5 32s linear infinite;
  }

  .float-6 {
    top: 15%;
    left: 40%;
    animation: float6 27s linear infinite;
  }

  .float-7 {
    top: 45%;
    left: 15%;
    animation: float7 33s linear infinite;
  }

  .float-8 {
    top: 50%;
    left: 60%;
    animation: float8 29s linear infinite;
  }

  .float-9 {
    top: 20%;
    left: 90%;
    animation: float9 31s linear infinite;
  }

  .float-10 {
    top: 85%;
    left: 75%;
    animation: float10 26s linear infinite;
  }

  .float-11 {
    top: 40%;
    left: 30%;
    animation: float11 34s linear infinite;
  }

  .float-12 {
    top: 5%;
    left: 55%;
    animation: float12 28s linear infinite;
  }

  /* Combined floating and morphing keyframes */
  @keyframes float1 {
    0% { transform: translate(-20vw, 10vh) scale(1) rotate(0deg); }
    25% { transform: translate(15vw, 2vh) scale(1.3) rotate(15deg); }
    50% { transform: translate(50vw, -5vh) scale(0.8) rotate(-10deg); }
    75% { transform: translate(85vw, -12vh) scale(1.1) rotate(20deg); }
    100% { transform: translate(120vw, -15vh) scale(1) rotate(0deg); }
  }

  @keyframes float2 {
    0% { transform: translate(-30vw, 5vh) scale(1) rotate(0deg); }
    33% { transform: translate(20vw, -3vh) scale(0.7) rotate(-25deg); }
    66% { transform: translate(70vw, -12vh) scale(1.4) rotate(15deg); }
    100% { transform: translate(130vw, -20vh) scale(1) rotate(0deg); }
  }

  @keyframes float3 {
    0% { transform: translate(-25vw, 0vh) scale(1) rotate(0deg); }
    50% { transform: translate(50vw, -5vh) scale(1.2) rotate(30deg); }
    100% { transform: translate(125vw, -10vh) scale(1) rotate(0deg); }
  }

  @keyframes float4 {
    0% { transform: translate(-35vw, 15vh) scale(1) rotate(0deg); }
    25% { transform: translate(10vw, 5vh) scale(0.9) rotate(10deg); }
    50% { transform: translate(50vw, -5vh) scale(1.3) rotate(-20deg); }
    75% { transform: translate(90vw, -15vh) scale(0.8) rotate(5deg); }
    100% { transform: translate(135vw, -25vh) scale(1) rotate(0deg); }
  }

  @keyframes float5 {
    0% { transform: translate(-40vw, 8vh) scale(1) rotate(0deg); }
    40% { transform: translate(30vw, -2vh) scale(1.5) rotate(-15deg); }
    80% { transform: translate(100vw, -14vh) scale(0.7) rotate(25deg); }
    100% { transform: translate(140vw, -18vh) scale(1) rotate(0deg); }
  }

  @keyframes float6 {
    0% { transform: translate(-15vw, 12vh) scale(1) rotate(0deg); }
    33% { transform: translate(30vw, 4vh) scale(1.1) rotate(20deg); }
    66% { transform: translate(70vw, -4vh) scale(1.3) rotate(-30deg); }
    100% { transform: translate(115vw, -12vh) scale(1) rotate(0deg); }
  }

  @keyframes float7 {
    0% { transform: translate(-28vw, 3vh) scale(1) rotate(0deg); }
    50% { transform: translate(50vw, -10vh) scale(0.8) rotate(-15deg); }
    100% { transform: translate(128vw, -22vh) scale(1) rotate(0deg); }
  }

  @keyframes float8 {
    0% { transform: translate(-22vw, 18vh) scale(1) rotate(0deg); }
    25% { transform: translate(20vw, 12vh) scale(1.4) rotate(25deg); }
    75% { transform: translate(80vw, 2vh) scale(0.9) rotate(-10deg); }
    100% { transform: translate(122vw, -8vh) scale(1) rotate(0deg); }
  }

  @keyframes float9 {
    0% { transform: translate(-38vw, 6vh) scale(1) rotate(0deg); }
    50% { transform: translate(50vw, -5vh) scale(1.2) rotate(-20deg); }
    100% { transform: translate(138vw, -16vh) scale(1) rotate(0deg); }
  }

  @keyframes float10 {
    0% { transform: translate(-32vw, 14vh) scale(1) rotate(0deg); }
    33% { transform: translate(25vw, 4vh) scale(0.85) rotate(15deg); }
    66% { transform: translate(75vw, -4vh) scale(1.35) rotate(-25deg); }
    100% { transform: translate(132vw, -14vh) scale(1) rotate(0deg); }
  }

  @keyframes float11 {
    0% { transform: translate(-18vw, 9vh) scale(1) rotate(0deg); }
    40% { transform: translate(40vw, 0vh) scale(1.25) rotate(-30deg); }
    80% { transform: translate(90vw, -12vh) scale(0.75) rotate(10deg); }
    100% { transform: translate(118vw, -19vh) scale(1) rotate(0deg); }
  }

  @keyframes float12 {
    0% { transform: translate(-26vw, 7vh) scale(1) rotate(0deg); }
    25% { transform: translate(15vw, 3vh) scale(0.9) rotate(20deg); }
    50% { transform: translate(50vw, -3vh) scale(1.4) rotate(-15deg); }
    75% { transform: translate(85vw, -8vh) scale(1.1) rotate(5deg); }
    100% { transform: translate(126vw, -13vh) scale(1) rotate(0deg); }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .floating-image img {
      max-width: 50px !important;
      width: 50px !important;
    }
  }
</style>

<script>
  // Theme toggle functionality
  function initTheme() {
    const theme = localStorage.getItem('theme') || 'dark';
    if (theme === 'dark') {
      document.documentElement.classList.add('dark');
    } else {
      document.documentElement.classList.remove('dark');
    }
  }

  // Initialize theme immediately
  initTheme();

  // Add event listener after page loads
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('theme-toggle');
    if (toggle) {
      toggle.addEventListener('click', () => {
        const isDark = document.documentElement.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
      });
    }

    // Randomize floating image animations
    const floatingImages = document.querySelectorAll('.floating-image');
    const floatClasses = ['float-1', 'float-2', 'float-3', 'float-4', 'float-5', 'float-6', 
                          'float-7', 'float-8', 'float-9', 'float-10', 'float-11', 'float-12'];
    
    function shuffleArray(array) {
      const shuffled = [...array];
      for (let i = shuffled.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
      }
      return shuffled;
    }

    function randomizeAnimations() {
      const shuffledClasses = shuffleArray(floatClasses);
      floatingImages.forEach((img, index) => {
        // Remove all float classes
        floatClasses.forEach(cls => img.classList.remove(cls));
        // Add new random float class
        img.classList.add(shuffledClasses[index]);
      });
    }

    // Randomize on each animation end
    floatingImages.forEach((img) => {
      img.addEventListener('animationiteration', () => {
        randomizeAnimations();
      });
    });

    // Initial randomization
    randomizeAnimations();
  });
</script>
