---
import { getCollection, render } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

// Format date to avoid inline JSX complexity
const formattedDate = post.data.pubDate
  ? new Date(post.data.pubDate).toLocaleDateString("en-US", {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  : null;
const isoDate = post.data.pubDate
  ? new Date(post.data.pubDate).toISOString()
  : null;
---

<Layout title={post.data.title || "News"} noWrapper={true} showTOC={true}>
  <main class="news-post-main">
    <article class="article-content">
      {
        post.data.image && (
          <figure class="mb-8">
            <div class="aspect-video overflow-hidden rounded-lg">
              <img
                src={post.data.image.url}
                alt={post.data.image.alt}
                class="w-full h-full object-cover"
              />
            </div>
            {(post.data.image.alt || post.data.image.photographer) && (
              <figcaption class="mt-2 text-lg text-center font-bold text-secondary">
                {post.data.image.alt}
                {post.data.image.photographer && (
                  <span class="block mt-1 text-right font-normal">
                    Photo by {post.data.image.photographer}
                  </span>
                )}
              </figcaption>
            )}
          </figure>
        )
      }

      <header class="mb-8">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 text-primary">
          {post.data.title}
        </h1>

        <div class="flex items-center gap-4 mb-4 text-secondary">
          {
            formattedDate && isoDate && (
              <time datetime={isoDate}>{formattedDate}</time>
            )
          }
          {
            post.data.author && (
              <span>
                by{" "}
                <a
                  href={`/news?author=${encodeURIComponent(post.data.author)}`}
                  class="hover:text-primary hover:underline transition-colors"
                >
                  {post.data.author}
                </a>
              </span>
            )
          }
        </div>

        {
          post.data.description && (
            <p class="text-xl italic text-secondary">{post.data.description}</p>
          )
        }

        {
          post.data.tags && post.data.tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mt-4">
              {post.data.tags.map((tag) => (
                <a
                  href={`/news?tag=${encodeURIComponent(tag)}`}
                  class="inline-block px-3 py-1 text-sm rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 hover:bg-blue-200 dark:hover:bg-blue-800/40 transition-colors"
                >
                  {tag}
                </a>
              ))}
            </div>
          )
        }
      </header>

      <div class="article-content">
        <Content />
      </div>

      <footer class="mt-12 pt-8 border-t border-[var(--border-color)]">
        <a
          href="/news"
          class="inline-flex items-center gap-2 text-blue-600 dark:text-blue-400 hover:underline"
        >
          ‚Üê Back to all news
        </a>
      </footer>
    </article>
  </main>
</Layout>

<style>
  /* Text color utilities */
  .text-primary {
    color: var(--text-primary);
  }

  .text-secondary {
    color: var(--text-secondary);
  }

  /* Main container for news posts */
  .news-post-main {
    width: 100%;
    padding: 2rem 1rem;
    max-width: 1600px;
    margin: 0 auto;
  }

  /* Article Content Styling */
  .article-content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--text-secondary);
  }

  /* Headings */
  .article-content :global(h2) {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    line-height: 1.3;
    border-bottom: 2px solid var(--border-color);
    padding-bottom: 0.5rem;
  }

  .article-content :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.4;
  }

  .article-content :global(h4) {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    line-height: 1.4;
  }

  /* First heading shouldn't have top margin */
  .article-content :global(h2:first-child),
  .article-content :global(h3:first-child) {
    margin-top: 0;
  }

  /* Paragraphs */
  .article-content :global(p) {
    margin-bottom: 1.5rem;
    color: var(--text-secondary);
  }

  /* Links */
  .article-content :global(a) {
    color: #2563eb;
    text-decoration: underline;
    text-decoration-color: rgba(37, 99, 235, 0.3);
    text-underline-offset: 2px;
    transition: all 0.2s;
  }

  .article-content :global(a:hover) {
    color: #1d4ed8;
    text-decoration-color: rgba(29, 78, 216, 0.6);
  }

  :global(.dark) .article-content :global(a) {
    color: #60a5fa;
    text-decoration-color: rgba(96, 165, 250, 0.3);
  }

  :global(.dark) .article-content :global(a:hover) {
    color: #93c5fd;
    text-decoration-color: rgba(147, 197, 253, 0.6);
  }

  /* Lists */
  .article-content :global(ul),
  .article-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.75rem;
  }

  .article-content :global(ul) {
    list-style-type: disc;
    list-style-position: outside;
  }

  .article-content :global(ol) {
    list-style-type: decimal;
    list-style-position: outside;
  }

  .article-content :global(li) {
    margin-bottom: 0.75rem;
    line-height: 1.7;
    display: list-item;
  }

  .article-content :global(ul ul),
  .article-content :global(ol ol),
  .article-content :global(ul ol),
  .article-content :global(ol ul) {
    margin-top: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .article-content :global(ul li) {
    padding-left: 0.25rem;
  }

  /* Nested list bullets */
  .article-content :global(ul ul) {
    list-style-type: circle;
  }

  .article-content :global(ul ul ul) {
    list-style-type: square;
  }

  /* Blockquotes */
  .article-content :global(blockquote) {
    border-left: 4px solid #3b82f6;
    padding: 1rem 1.5rem;
    margin: 2rem 0;
    background-color: rgba(59, 130, 246, 0.05);
    border-radius: 0 0.5rem 0.5rem 0;
    font-style: italic;
    font-size: larger;
  }

  :global(.dark) .article-content :global(blockquote) {
    background-color: rgba(59, 130, 246, 0.1);
  }

  .article-content :global(blockquote p) {
    margin-bottom: 0.75rem;
  }

  .article-content :global(blockquote p:last-child) {
    margin-bottom: 0;
  }

  /* Code */
  .article-content :global(code) {
    background-color: rgba(0, 0, 0, 0.05);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
    font-family: "Courier New", monospace;
    color: var(--text-primary);
  }

  :global(.dark) .article-content :global(code) {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .article-content :global(pre) {
    background-color: rgba(0, 0, 0, 0.05);
    padding: 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  :global(.dark) .article-content :global(pre) {
    background-color: rgba(255, 255, 255, 0.05);
  }

  .article-content :global(pre code) {
    background-color: transparent;
    padding: 0;
    font-size: 0.95rem;
  }

  /* Strong/Bold */
  .article-content :global(strong) {
    font-weight: 600;
    color: var(--text-primary);
  }

  /* Images and Figures */
  .article-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 2rem auto;
    display: block;
  }

  .article-content :global(figure) {
    margin: 3rem 0;
  }

  .article-content :global(figcaption) {
    margin-top: 0.75rem;
    text-align: center;
    font-size: 0.95rem;
    font-style: italic;
    color: var(--text-secondary);
    line-height: 1.5;
  }

  /* Support for images followed by emphasis text as captions */
  .article-content :global(img + em) {
    display: block;
    margin-top: 0.75rem;
    text-align: center;
    font-size: 0.95rem;
    color: var(--text-secondary);
  }

  /* Horizontal Rules */
  .article-content :global(hr) {
    border: none;
    border-top: 2px solid var(--border-color);
    margin: 3rem 0;
  }

  /* Tables */
  .article-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }

  .article-content :global(th),
  .article-content :global(td) {
    padding: 0.75rem;
    border: 1px solid var(--border-color);
    text-align: left;
  }

  .article-content :global(th) {
    background-color: rgba(0, 0, 0, 0.03);
    font-weight: 600;
    color: var(--text-primary);
  }

  :global(.dark) .article-content :global(th) {
    background-color: rgba(255, 255, 255, 0.05);
  }
</style>
