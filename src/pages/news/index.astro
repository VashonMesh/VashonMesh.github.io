---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const allPosts = (await getCollection("blog"))
  .filter(post => post.data.title && post.data.title.toLowerCase() !== 'readme')
  .sort((a, b) => {
    const dateA = a.data.pubDate ? new Date(a.data.pubDate).valueOf() : 0;
    const dateB = b.data.pubDate ? new Date(b.data.pubDate).valueOf() : 0;
    return dateB - dateA;
  });

// Get all unique tags for reference
const allTags = [...new Set(allPosts.flatMap(post => post.data.tags || []))].sort();

// Get all unique authors
const allAuthors = [...new Set(allPosts
  .map(post => post.data.author)
  .filter(author => author))].sort();

// Count posts per tag
const tagCounts = allTags.reduce((acc, tag) => {
  acc[tag] = allPosts.filter(post => post.data.tags?.includes(tag)).length;
  return acc;
}, {} as Record<string, number>);

// Count posts per author
const authorCounts = allAuthors.reduce((acc, author) => {
  acc[author!] = allPosts.filter(post => post.data.author === author).length;
  return acc;
}, {} as Record<string, number>);

// Get unique months for filter
const months = [...new Set(allPosts
  .map(post => {
    if (!post.data.pubDate) return null;
    const date = new Date(post.data.pubDate);
    return `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}`;
  })
  .filter(month => month !== null))].sort((a, b) => b!.localeCompare(a!));

// Convert month strings to readable format
const monthOptions = months.map(month => {
  if (!month) return null;
  const [year, monthNum] = month.split('-');
  const date = new Date(parseInt(year), parseInt(monthNum) - 1);
  return {
    value: month,
    label: date.toLocaleDateString('en-US', { year: 'numeric', month: 'long' })
  };
}).filter(m => m !== null);
---

<Layout title="News" twoColumn={true}>
    <div class="flex flex-col gap-4 mb-8">
      <h1 class="text-4xl font-bold">News & Updates</h1>
      
      <div class="flex flex-col sm:flex-row gap-4">
        <!-- Search input -->
        <div class="flex-1">
          <label for="search-input" class="sr-only">Search posts</label>
          <div class="relative">
            <svg 
              class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-[var(--text-secondary)]" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <input 
              type="text"
              id="search-input"
              placeholder="Search posts by title, description, tags, or author..."
              class="w-full pl-10 pr-10 py-2 rounded-md border border-[var(--border-color)] bg-[var(--bg-primary)] text-[var(--text-primary)] placeholder-[var(--text-secondary)] focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
            <button
              id="clear-search"
              class="absolute right-3 top-1/2 -translate-y-1/2 text-[var(--text-secondary)] hover:text-[var(--text-primary)] hidden"
              aria-label="Clear search"
              type="button"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
        </div>
        
        <!-- Month filter -->
        <div class="flex items-center gap-2">
          <label for="month-filter" class="text-sm font-medium text-[var(--text-secondary)] whitespace-nowrap">
            Filter by month:
          </label>
          <select 
            id="month-filter" 
            class="px-3 py-2 rounded-md border border-[var(--border-color)] bg-[var(--bg-primary)] text-[var(--text-primary)] focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="">All Months</option>
            {monthOptions.map(month => (
              <option value={month.value}>{month.label}</option>
            ))}
          </select>
        </div>
      </div>
    </div>
    
    <div id="posts-info" class="text-sm text-[var(--text-secondary)] mb-4">
      Showing <span id="visible-count">{allPosts.length}</span> of {allPosts.length} posts
      <span id="search-status" class="hidden"> matching "<span id="search-term"></span>"</span>
      <span id="tag-status" class="hidden"> with tag "<span id="tag-name"></span>" <button id="clear-tag" class="ml-2 text-blue-600 dark:text-blue-400 hover:underline">clear</button></span>
      <span id="author-status" class="hidden"> by <span id="author-name"></span> <button id="clear-author" class="ml-2 text-blue-600 dark:text-blue-400 hover:underline">clear</button></span>
    </div>
    
    <div class="grid gap-8 md:grid-cols-2" id="news-grid">
      {allPosts.map((post) => (
        <article 
          class="news-item group flex flex-col overflow-visible rounded-lg border border-[var(--border-color)] bg-[var(--card-bg)] transition-all hover:shadow-lg"
          data-month={post.data.pubDate ? (() => {
            const date = new Date(post.data.pubDate);
            return `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}`;
          })() : ''}
          data-date={post.data.pubDate ? new Date(post.data.pubDate).toISOString() : ''}
          data-title={post.data.title?.toLowerCase() || ''}
          data-description={post.data.description?.toLowerCase() || ''}
          data-author={post.data.author?.toLowerCase() || ''}
          data-tags={post.data.tags?.map(tag => tag.toLowerCase()).join(' ') || ''}
        >
          <a href={`/news/${post.id}`} class="flex flex-col h-full">
            {post.data.image ? (
              <div class="image-tooltip-container" data-caption={post.data.image.alt} data-photographer={post.data.image.photographer}>
                <div class="aspect-video overflow-hidden bg-gray-200 dark:bg-gray-800">
                  <img
                    src={post.data.image.url}
                    alt={post.data.image.alt}
                    class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                    loading="lazy"
                  />
                </div>
              </div>
            ) : (
              <div class="aspect-video overflow-hidden bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
                <svg class="w-20 h-20 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                </svg>
              </div>
            )}
            
            <div class="flex flex-col flex-1 p-6">
              <h2 class="text-2xl font-bold mb-2 text-[var(--text-primary)] group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                {post.data.title}
              </h2>
              
              <div class="flex items-center gap-4 text-sm text-[var(--text-secondary)] mb-3">
                {post.data.pubDate && (
                  <time datetime={new Date(post.data.pubDate).toISOString()}>
                    {new Date(post.data.pubDate).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                )}
                {post.data.author && (
                  <span>by {post.data.author}</span>
                )}
              </div>
              
              {post.data.description && (
                <p class="text-[var(--text-secondary)] mb-4 flex-1 line-clamp-3">
                  {post.data.description}
                </p>
              )}
              
                      {post.data.tags && post.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mb-4">
                  {post.data.tags.map((tag) => (
                    <a 
                      href={`/news?tag=${encodeURIComponent(tag)}`}
                      class="inline-block px-3 py-1 text-xs rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 hover:bg-blue-200 dark:hover:bg-blue-800/40 transition-colors"
                      onclick="((e) => e.stopPropagation())(event)"
                    >
                      {tag}
                    </a>
                  ))}
                </div>
              )}
              
              <span class="text-blue-600 dark:text-blue-400 font-medium group-hover:underline">
                Read more â†’
              </span>
            </div>
          </a>
        </article>
      ))}
    </div>

    <div id="no-results" class="hidden text-center py-12 text-[var(--text-secondary)]">
      <svg class="w-16 h-16 mx-auto mb-4 text-[var(--text-secondary)] opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <p class="text-xl mb-2">No posts found</p>
      <p class="text-sm">Try adjusting your search or filter criteria</p>
    </div>

  <div slot="sidebar" class="space-y-6">
    <!-- Tags Section -->
    <div class="bg-[var(--card-bg)] rounded-lg border border-[var(--border-color)] p-4">
      <h3 class="text-lg font-semibold mb-3 text-[var(--text-primary)]">Tags</h3>
      <div class="flex flex-wrap gap-2">
        {allTags.map((tag) => (
          <a 
            href={`/news?tag=${encodeURIComponent(tag)}`}
            class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 hover:bg-blue-200 dark:hover:bg-blue-800/40 transition-colors"
          >
            <span>{tag}</span>
            <span class="text-xs opacity-70">({tagCounts[tag]})</span>
          </a>
        ))}
      </div>
    </div>

    <!-- Authors Section -->
    <div class="bg-[var(--card-bg)] rounded-lg border border-[var(--border-color)] p-4">
      <h3 class="text-lg font-semibold mb-3 text-[var(--text-primary)]">Authors</h3>
      <div class="space-y-2">
        {allAuthors.map((author) => (
          <a 
            href={`/news?author=${encodeURIComponent(author!)}`}
            class="flex items-center justify-between px-3 py-2 rounded-md hover:bg-[var(--bg-secondary)] transition-colors"
          >
            <span class="text-[var(--text-primary)] font-medium">{author}</span>
            <span class="text-sm text-[var(--text-secondary)]">{authorCounts[author!]}</span>
          </a>
        ))}
      </div>
    </div>
  </div>
</Layout>

<style>
  /* Image tooltip */
  .image-tooltip-container {
    position: relative;
    width: 100%;
  }

  .image-tooltip-container::after {
    content: attr(data-caption);
    position: absolute;
    bottom: calc(100% + 10px);
    left: 50%;
    transform: translateX(-50%);
    background-color: rgba(0, 0, 0, 0.92);
    color: white;
    padding: 8px 16px;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 600;
    white-space: normal;
    max-width: 100%;
    width: max-content;
    text-align: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease, transform 0.3s ease;
    z-index: 10000;
    line-height: 1.3;
  }

  .image-tooltip-container[data-photographer]::after {
    content: attr(data-caption) "\A\A- " attr(data-photographer);
    white-space: pre-wrap;
    text-align: right;
    font-weight: 400;
  }

  .news-item:hover .image-tooltip-container::after,
  .image-tooltip-container:hover::after {
    opacity: 1;
    transform: translateX(-50%) translateY(-4px);
  }

  :global(.dark) .image-tooltip-container::after {
    background-color: rgba(255, 255, 255, 0.95);
    color: #111827;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Fix dropdown option colors */
  #month-filter,
  #month-filter option {
    background-color: var(--bg-primary);
    color: var(--text-primary);
  }
</style>

<script>
  // Client-side search and month filtering
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const clearSearch = document.getElementById('clear-search') as HTMLButtonElement;
  const monthFilter = document.getElementById('month-filter') as HTMLSelectElement;
  const newsItems = document.querySelectorAll('.news-item');
  const visibleCount = document.getElementById('visible-count');
  const searchStatus = document.getElementById('search-status');
  const searchTerm = document.getElementById('search-term');
  const tagStatus = document.getElementById('tag-status');
  const tagName = document.getElementById('tag-name');
  const clearTagBtn = document.getElementById('clear-tag');
  const authorStatus = document.getElementById('author-status');
  const authorName = document.getElementById('author-name');
  const clearAuthorBtn = document.getElementById('clear-author');
  const noResults = document.getElementById('no-results');
  const newsGrid = document.getElementById('news-grid');

  // Get tag and author from URL parameters
  const urlParams = new URLSearchParams(window.location.search);
  let activeTag = urlParams.get('tag');
  let activeAuthor = urlParams.get('author');

  function updateDisplay() {
    const selectedMonth = monthFilter?.value;
    const searchQuery = searchInput?.value.toLowerCase().trim() || '';
    let visibleItems = 0;
    
    newsItems.forEach((item) => {
      const itemMonth = item.getAttribute('data-month');
      const title = item.getAttribute('data-title') || '';
      const description = item.getAttribute('data-description') || '';
      const author = item.getAttribute('data-author') || '';
      const tags = item.getAttribute('data-tags') || '';
      
      // Check month filter
      const monthMatch = !selectedMonth || itemMonth === selectedMonth;
      
      // Check search query - search across title, description, author, and tags
      const searchMatch = !searchQuery || 
        title.includes(searchQuery) ||
        description.includes(searchQuery) ||
        author.includes(searchQuery) ||
        tags.includes(searchQuery);
      
      // Check tag filter
      const tagMatch = !activeTag || tags.includes(activeTag.toLowerCase());
      
      // Check author filter
      const authorMatch = !activeAuthor || author === activeAuthor.toLowerCase();
      
      if (monthMatch && searchMatch && tagMatch && authorMatch) {
        (item as HTMLElement).style.display = '';
        visibleItems++;
      } else {
        (item as HTMLElement).style.display = 'none';
      }
    });

    // Update visible count
    if (visibleCount) {
      visibleCount.textContent = visibleItems.toString();
    }

    // Update search status
    if (searchQuery && searchStatus && searchTerm) {
      searchStatus.classList.remove('hidden');
      searchTerm.textContent = searchQuery;
    } else if (searchStatus) {
      searchStatus.classList.add('hidden');
    }

    // Update tag status
    if (activeTag && tagStatus && tagName) {
      tagStatus.classList.remove('hidden');
      tagName.textContent = activeTag;
    } else if (tagStatus) {
      tagStatus.classList.add('hidden');
    }

    // Update author status
    if (activeAuthor && authorStatus && authorName) {
      authorStatus.classList.remove('hidden');
      authorName.textContent = activeAuthor;
    } else if (authorStatus) {
      authorStatus.classList.add('hidden');
    }

    // Show/hide clear button
    if (searchQuery && clearSearch) {
      clearSearch.classList.remove('hidden');
    } else if (clearSearch) {
      clearSearch.classList.add('hidden');
    }

    // Toggle no results message
    if (visibleItems === 0) {
      newsGrid?.classList.add('hidden');
      noResults?.classList.remove('hidden');
    } else {
      newsGrid?.classList.remove('hidden');
      noResults?.classList.add('hidden');
    }
  }

  // Event listeners
  searchInput?.addEventListener('input', updateDisplay);
  monthFilter?.addEventListener('change', updateDisplay);
  
  clearSearch?.addEventListener('click', () => {
    if (searchInput) {
      searchInput.value = '';
      searchInput.focus();
      updateDisplay();
    }
  });

  // Allow Escape key to clear search
  searchInput?.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && searchInput.value) {
      searchInput.value = '';
      updateDisplay();
    }
  });

  // Clear tag filter
  clearTagBtn?.addEventListener('click', () => {
    activeTag = null;
    // Update URL without tag parameter
    const url = new URL(window.location.href);
    url.searchParams.delete('tag');
    window.history.pushState({}, '', url);
    updateDisplay();
  });

  // Clear author filter
  clearAuthorBtn?.addEventListener('click', () => {
    activeAuthor = null;
    // Update URL without author parameter
    const url = new URL(window.location.href);
    url.searchParams.delete('author');
    window.history.pushState({}, '', url);
    updateDisplay();
  });

  // Initial display update to apply filters from URL
  if (activeTag || activeAuthor) {
    updateDisplay();
  }
</script>

