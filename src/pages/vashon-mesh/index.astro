  </div>
</Layout>

<style>
  /* Hide default disclosure markers */
  summary::-webkit-details-marker {
    display: none;
  }

  summary::marker {
    display: none;
  }

  summary::before {
    display: none;
  }

  /* Rotate arrow when details is open */
  details[open] summary .arrow {
    transform: rotate(-180deg);
  }
</style>
